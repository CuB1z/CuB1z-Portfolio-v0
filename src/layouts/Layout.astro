---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Software Engineer Student | CuB1" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    :root {
        color-scheme: dark;

        --primary-bg-color: #13151a;
        --secondary-bg-color: #1f2128;
        --terciary-bg-color: #55a1c5;

        --primary-accent-color: #ff6b6b;
        --primary-accent-color-hover: #ff8787;
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        color: #fff;
    }

    html {
        font-family: system-ui, sans-serif;
        scroll-behavior: smooth;
    }

    body {
        min-height: 300vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: #13151a;
        background: radial-gradient(
            at center top,
            var(--secondary-bg-color),
            #10141c
        );
    }
</style>
