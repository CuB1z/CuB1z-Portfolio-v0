---
interface Props {
    title: string;
}

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ChangeLanguage from "../components/ChangeLanguage.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Software Engineer Student | CuB1" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <ChangeLanguage />
        <Footer />
    </body>
</html>

<style is:global>
    :root {
        --primary-bg-color: #13151a;
        --secondary-bg-color: #22242a;
        --terciary-bg-color: #2b96b3;
        
        --gradient-from-color: #22242a;
        --gradient-to-color: #000000;
        
        --nav-bg-color: #272a34;
        --footer-bg-color: #13151a;
        
        --location-text-color: #d1e8ef;
        --education-text-color: #a0b6c4;
        
        --primary-accent-color: #89b4d0;
        --secondary-accent-color: #080808;
        
        --primary-text-color: #fff;
        --white-text-color: #fff;
        --dark-text-color: #000;
        --secondary-text-color: #97bcd5;
        --terciary-text-color: #ffd53d;
        --yellow-text-color: #ffdb57;
        --red-text-color: #d04d4d;
        --green-text-color: #c7ffda;
        
        --JavaScript-Color: #d4b21b;
        --HTML-Color: #e34c26;
        --Java-Color: #e34c26;
        --CSS-Color: #2965f1;
        --Node-Color: #68a063;
        --Express-Color: #0000009e;
        --XML-Color: #f5985a;
        
        --GitHub-bg-color: #181818;
        --LinkedIn-bg-color: #608ea77e;
        --Twitter-bg-color: #1da1f2;
        --Instagram-bg-color: #e1306c;
        --Discord-bg-color: #7289da;
        --Email-bg-color: #fff;
    }
    
    body.light {
        --primary-bg-color: #ffffff;
        --secondary-bg-color: #eee;
        --terciary-bg-color: #4BA0F5;

        --gradient-from-color: #eeeeee;
        --gradient-to-color: #eeeeee;

        --nav-bg-color: #4BA0F5;
        --footer-bg-color: #cbcbcb;

        --location-text-color: #4BA0F5;
        --education-text-color: #17394e;

        --primary-accent-color: #ffffff;
        --secondary-accent-color: #080808;

        --primary-text-color: #000;
        --white-text-color: #fff;
        --dark-text-color: #fff;
        --secondary-text-color: #4b93c4;
        --terciary-text-color: #fab005;
        --yellow-text-color: #fa9805;
        --red-text-color: #d04d4d;
        --green-text-color: #c7ffda;
        
        --JavaScript-Color: #d4b21b;
        --HTML-Color: #e34c26;
        --Java-Color: #e34c26;
        --CSS-Color: #2965f1;
        --Node-Color: #68a063;
        --Express-Color: #0000009e;
        --XML-Color: #f5985a;

        --GitHub-bg-color: #181818;
        --LinkedIn-bg-color: #0076b2;
        --Twitter-bg-color: #1da1f2;
        --Instagram-bg-color: #e1306c;
        --Discord-bg-color: #7289da;
        --Email-bg-color: #000;
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        color: var(--primary-text-color);
        font-family: system-ui, sans-serif;
        scroll-behavior: smooth;
    }

    body {
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #13151a;
        background: radial-gradient(
            at center top,
            var(--gradient-from-color) 0%,
            var(--gradient-to-color) 100%
        );
    }

    main {
        width: 1000px;
        padding: 0px 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    @media (max-width: 1100px) {
        main {
            width: 90%;
        }
    }

    @media (max-width: 800px) {
        main {
            padding: 0 10px;
        }
    }
</style>
