---
interface Props {
    title: string;
}

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Software Engineer Student | CuB1" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style is:global>
    :root {
        color-scheme: dark;

        --primary-bg-color: #13151a;
        --secondary-bg-color: #1f2128;
        --terciary-bg-color: #55a1c5;

        --primary-accent-color: #495c69;
        --primary-accent-color-hover: #aa6060;

        --primary-text-color: #fff;
        --secondary-text-color: #97bcd5;
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        color: var(--primary-text-color);
    }

    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #13151a;
        background: radial-gradient(
            at center top,
            var(--secondary-bg-color),
            #10141c
        );
        font-family: system-ui, sans-serif;
        scroll-behavior: smooth;
    }

    main {
        width: 700px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
</style>
