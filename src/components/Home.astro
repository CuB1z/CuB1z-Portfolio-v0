---

import DownloadFile from './DownloadFile.astro'

const actualDate = new Date()
const age = actualDate.getMonth() > 6 ? actualDate.getFullYear() - 2004 : actualDate.getFullYear() - 2005
---

<section id="home">
    <h1>Hey, I am CuB1</h1>
    <h2>a <span id="ocupation">Software Engineering Student</span></h2>
    <p>
        <span id="age">{age} year old student.</span>
        <br>
        <span id="education">Rey Juan Carlos University.</span>
        <span id="location">Madrid, Spain.</span>
    </p>
    <DownloadFile
        title="CV"
        path="/Diego_Sanchez_CV.pdf"
    />
</section>

<style>
    #home {
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        letter-spacing: 1px;
    }

    h1 {
        width: 100%;
        font-size: 5em;
        font-weight: 700;
    }

    h2 {
        font-size: 2em;
        margin-bottom: 3rem;
    }

    p {
        width: 85%;
        font-size: 1.2em;
        font-weight: 500;
        line-height: 1.5em;
    }

    #ocupation {
        color: var(--secondary-text-color);
    }

    #age {
        color: var(--yellow-text-color);
    }
    
    #location {
        color: #d1e8ef;
    }
    
    #education {
        margin-right: 15px;
        color: #a0b6c4;
    }

    @media (max-width: 500px) {
        h1 {
            font-size: 3em;
        }

        h2 {
            font-size: 1.5em;
        }

        p {
            font-size: 1em;
        }
    }
</style>