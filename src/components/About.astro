---
import SocialButton from "./SocialButton.astro";
import getLanguage from "../languages/script.js";

const language = getLanguage(Astro.currentLocale)
---

<section id="about">
    <h1>{language.ABOUT_TITLE}</h1>
    <div id="about--container">
        <div id="text-content">
            <p>
                {language.ABOUT_TEXT_1_1}
                <strong>{language.ABOUT_TEXT_1_STRONG_1}</strong>
            </p>
            <p>
                {language.ABOUT_TEXT_2_1}
                <strong>{language.ABOUT_TEXT_2_STRONG_1}</strong>
                {language.ABOUT_TEXT_2_2}
                <strong>{language.ABOUT_TEXT_2_STRONG_2}</strong>
                {language.ABOUT_TEXT_2_3}
            </p>
            <p>
                {language.ABOUT_TEXT_3_1}
                <strong>{language.ABOUT_TEXT_3_STRONG_1}</strong>
                {language.ABOUT_TEXT_3_2}
                <strong>{language.ABOUT_TEXT_3_STRONG_2}</strong>
                {language.ABOUT_TEXT_3_3}
            </p>
            <p>
                {language.ABOUT_TEXT_4_1}
                <strong>{language.ABOUT_TEXT_4_STRONG_1}</strong>
                {language.ABOUT_TEXT_4_2}
                <strong>{language.ABOUT_TEXT_4_STRONG_2}</strong>
                {language.ABOUT_TEXT_4_3}
            </p>
        </div>
        <div id="img--div">
            <img
                id="profile--img"
                src="/assets/Me.jpg"
                alt="CuB1 profile picture"
            />
        </div>
    </div>
    <div id="links-container">
        <SocialButton
            title="GitHub"
            url="https://github.com/CuB1z"
            reference="GitHub"
            textColor="var(--white-text-color)"
        />
        <SocialButton
            title="LinkedIn"
            url="https://www.linkedin.com/in/cub1z/"
            reference="LinkedIn"
            textColor="var(--white-text-color)"
        />
        <SocialButton
            title="cub1zdev@gmail.com"
            url="mailto:cub1zdev@gmail.com"
            reference="Email"
            textColor="var(--dark-text-color)"
        />
    </div>
</section>

<style>
    #about {
        min-height: 100vh;
        width: 100%;
        margin-bottom: 5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    #about h1 {
        font-size: 2.5rem;
        margin-bottom: 2rem;
    }

    #about p {
        font-size: 20px;
        font-weight: 500;
        line-height: 30px;
        letter-spacing: 1px;
        margin-bottom: 5px;
    }

    #about--container {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
    }

    #profile--img {
        width: 200px;
        height: 200px;
        border-radius: 50%;
    }

    strong {
        color: var(--yellow-text-color);
    }

    #links-container {
        margin-top: 3rem;
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 1.5rem;
    }

    @media (max-width: 500px) {
        #about h1 {
            font-size: 2rem;
        }

        #about p {
            font-size: 18px;
            line-height: 28px;
        }

        #about--container {
            flex-direction: column;
            gap: 3rem;
        }

        #links-container {
            margin-top: 2rem;
        }
    }

    @media (max-width: 800px) {
        #about--container {
            flex-direction: column-reverse;
            gap: 3rem;
        }

        #about--container #text-content {
            width: 90%;
            padding-left: 15px;
        }
    }
</style>
