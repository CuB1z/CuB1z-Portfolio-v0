---
import ToggleThemeIcon from "./ToggleThemeIcon.astro"

import getLanguage from "../languages/script"

const language = getLanguage(Astro.currentLocale)
---

<header>
    <nav id="menu">
        <img src="/favicon.svg" alt="CuB1's logo">
        <a href="#home">{language.HOME_TITLE}</a>
        <a href="#projects">{language.PROJECTS_TITLE}</a>
        <a href="#about">{language.ABOUT_TITLE}</a>
        <ToggleThemeIcon />
    </nav>
</header>

<style>
    header {
        width: 100%;
        height: 100px;
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10;
    }

    #menu {
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        list-style: none;
        padding: 1px 20px;
        gap: 15px;
        border-radius: 20px;
        background-color: var(--nav-bg-color);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    #menu a {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 4px 15px 5px 15px;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
        border-radius: 15px;
        color: var(--white-text-color);
        transition: all 0.2s ease;
    }

    #menu a:hover {
        background-color: rgba(0, 0, 0, 0.1);
        color: var(--primary-accent-color);
    }

    #menu img {
        margin-left: 15px;
        height: 20px;
        width: 20px;
        border-radius: 5px;
    }

    @media (max-width: 500px) {
        #menu {
            gap: 5px;
            padding: 2px 10px;
        }
        #menu .social {
            display: none;
        }
    }
</style>
