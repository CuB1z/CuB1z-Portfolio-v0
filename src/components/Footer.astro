<style>
    footer {
        margin-top: 10vh;
        width: 100%;
        min-height: 75px;
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
        background-color: var(--footer-bg-color);
    }

    #socials {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
    }

    a#tech--link {
        text-decoration: none;
        color: #ff006f;
    }

    a#tech--link:hover {
        text-decoration: wavy underline;
    }

    footer * {
        font-weight: 500;
        font-size: 0.9rem;
        letter-spacing: 1px;
        word-spacing: 1px;
    }

</style>